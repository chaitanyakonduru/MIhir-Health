<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/action_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bg9patch"
        android:orientation="vertical" >

        <include layout="@layout/action_bar_tv_patient_name" />

        <TextView
            style="@style/headertextstyle"
            android:text="Description" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="@drawable/menu_bg"
                android:minHeight="200dip"
                android:orientation="vertical" >

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                     >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="Doctor Name"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:text=" :  "
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/doc_visit_desc_doctorname"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:paddingTop="5dip"
                            android:text="Crocin"
                            android:textColor="@android:color/white" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="Visited Time"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:text=" :  "
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/doc_visit_desc_visitedtime"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="3times"
                            android:textColor="@android:color/white" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/prescription_ll_tablerow_quantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >
                    </TableRow>

                    <TableRow
                        android:id="@+id/prescription_ll_tablerow_performdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="Notes"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:text=" :  "
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/doc_visit_desc_notes"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            
                            android:text="description Note"
                            android:textColor="@android:color/white" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </ScrollView>

        <include layout="@layout/sharebutton" />
    </LinearLayout>

    <include layout="@layout/mms_ad" />

</LinearLayout>